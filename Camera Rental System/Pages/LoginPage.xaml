<UserControl x:Class="Camera_Rental_System.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Camera_Rental_System.Pages"
             mc:Ignorable="d" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="#2B2B2B"   
        TextElement.FontFamily="{DynamicResource Riveruta}"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel 
        TextElement.FontFamily="{DynamicResource Riveruta}" MaxWidth="200" Margin="0,0,25,0" VerticalAlignment="Center">
                <TextBlock Text="Login" FontFamily="{DynamicResource Bunya Bold}" FontSize="40" FontWeight="Bold"/>
                <TextBlock Text="Please look at the camera, remove any glasses and cosmetics." FontSize="16" TextWrapping="Wrap" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel>
                <Border Width="300" Height="300" Background="#3F000000" CornerRadius="10,10,10,10"></Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
