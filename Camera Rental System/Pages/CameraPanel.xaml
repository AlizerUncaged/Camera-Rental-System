<UserControl x:Class="Camera_Rental_System.Pages.CameraPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Camera_Rental_System.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border ClipToBounds="True" CornerRadius="7" Background="#FFEAEAEC">
        <DockPanel>
            <Image VerticalAlignment="Top" Source="{Binding CameraImage}"  Margin="0,0,0,15">

            </Image>
            <StackPanel>
                <TextBlock Text="{Binding CameraName}" FontWeight="Bold" FontSize="16">

                </TextBlock>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
